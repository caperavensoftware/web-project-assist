{
  "name": "Create Project",
  "tasks": [
    {
      "command": "npm init -y",
      "description": "1. initialize npm"
    },
    {
      "command": "npm install build-utilities --save-dev",
      "description": "3. install build-utilities, this make take some time"
    },
    {
      "command": "npm install jspm --save-dev",
      "description": "4. install jspm"
    },
    {
      "task": "template",
      "source": "project/gulpfile.js.template",
      "target": "gulpfile.js",
      "description": "5. set up gulpfile"
    },
    {
      "command": "gulp init-project",
      "description": "6. initialize project"
    },
    {
      "command": "git init",
      "description": "7. initialize git"
    },
    {
      "command": "git add -A && git commit -m 'Initial'",
      "description": "8. add git files"
    },
    {
      "command": "gulp build:all",
      "description": "9. building project"
    }
  ]
}