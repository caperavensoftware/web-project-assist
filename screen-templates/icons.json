{
  "type": "views",
  "fields": [
    {
      "field": "svgText",
      "map": "svgText"
    }
  ],
  "body": {
    "elements": [
      {
        "element": "div",
        "styles": ["fullsize-flex"],
        "elements": [
          {
            "element": "div",
            "styles": ["icon-list"],
            "elements": [
              {
                "element": "ul",
                "attributes": {
                  "selectable" :"selected-id.two-way: selectedId"
                },
                "elements": [
                  {
                    "element": "li",
                    "attributes": {
                      "repeat.for": "icon of iconsFile.icons",
                      "data-id": "${icon.id}"
                    },
                    "styles": ["icon-li"],
                    "elements": [
                      {
                        "element": "icon",
                        "attributes": {
                          "name": "${icon.name}"
                        },
                        "styles": ["no-mouse"]
                      },
                      {
                        "element": "div",
                        "content": "${icon.name}",
                        "styles": ["no-mouse"]
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "element": "div",
            "styles": ["icon-def", "container", "vertical"],
            "elements": [
              {
                "element": "div",
                "styles": ["svg-preview-container"],
                "elements": [
                  {
                    "element": "svg",
                    "attributes": {
                      "ref": "svgContainer",
                      "width": "6rem",
                      "height": "6rem",
                      "xmlns": "http://www.w3.org/2000/svg",
                      "xmlns:xlink":"http://www.w3.org/1999/xlink"
                    }
                  }
                ]
              },
              {
                "element": "textarea",
                "styles": ["stretch"],
                "attributes": {
                  "value.bind": "svgText"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}
