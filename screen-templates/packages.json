{
  "type": "views",
  "fields": [
    {
      "field": "code",
      "map": "onkey_code"
    }
  ],
  "body": {
    "elements": [
      {
        "element": "div",
        "styles": ["fullsize"],
        "elements": [
          {
            "element": "ul",
            "attributes": {
              "selectable" :"selected-id.two-way: selectedId"
            },
            "styles": ["fullsize odd"],
            "elements": [
              {
                "element": "li",
                "attributes": {
                  "repeat.for": "item of items",
                  "class.bind": "item.type != 4 ? 'package-list-item' : 'package-header'"
                },
                "styles": ["container", "horizontal"],
                "elements": [
                  {
                    "element": "label",
                    "elements": [
                      {
                        "element": "checkbox",
                        "attributes": {
                          "checked.bind": "item.isSelected",
                          "if.bind": "item.type != 4"
                        }
                      },
                      {
                        "element": "span",
                        "content": "${item.name}",
                        "attributes": {
                          "class.bind": "item.type == 4 ? 'list-header' : ''"
                        },
                        "styles": ["stretch"]
                      },
                      {
                        "element": "span",
                        "content": "${item.version}",
                        "styles": ["depreciated"]
                      },
                      {
                        "element": "span",
                        "content": "${item.newVersion}",
                        "styles": ["outdated"],
                        "attributes": {
                          "if.bind": "item.newVersion.length > 0"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "element": "div",
        "styles": ["busy"],
        "content": "${busyText}",
        "attributes": {
          "if.bind": "isBusy"
        }
      }
    ]
  }
}
